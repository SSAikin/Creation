 <div class="login-box" style="width: initial; left: 15%; top: 80px;">
	<div class="login-form" >
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	    	<div class="form-row w-100">
				<div class="ml3 form-col">
					<%= f.label(:first_name, class: "label") %>
					<%= f.text_field(:first_name, autofocus: true, class: "input", placeholder: "First Name") %>
				</div>
				<div class="ml3 form-col">
					<%= f.label(:last_name, class: "label") %>
					<%= f.text_field(:last_name, autofocus: true, class: "input", placeholder: "Last Name") %>
				</div>
				<% resource.errors[:first_name].each do |error| %>
					<div class="error">
						<%= error %>
					</div>
				<% end %>				
				<% resource.errors[:last_name].each do |error| %>
					<div class="error">
						<%= error %>
					</div>
				<% end %>
			</div>
			<div class="form-row w-100">
				<div class="ml3 form-col">
					<%= f.label(:nickname, class: "label") %>
					<%= f.text_field(:nickname, autofocus: true, autocomplete: "email", class: "input", placeholder: "Nickname") %>
				</div>
				<% resource.errors[:nickname].each do |error| %>
					<div class="error">
						<%= error %>
					</div>
				<% end %>
			</div>
			<div class="form-row w-100">
				<div class="ml3 form-col">
					<%= f.label(:email, class: "label") %>
					<%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Email") %>
				</div>
				<% resource.errors[:email].each do |error| %>
					<div class="error">
						<%= error %>
					</div>
				<% end %>
			</div>
			<div class="form-row w-100 ">
				<div class="ml3 form-col">
					<div class="label">
						<%= f.label(:password) %>
					    <% if @minimum_password_length %>
					    	<em>(<%= @minimum_password_length %> characters min)</em>
					    <% end %>
					</div>
					<%= f.password_field(:password, autocomplete: "current-password", class: "input", placeholder: "Password") %>
					
				</div>
				<div class="ml3 form-col">
	                <%= f.label(:password_confirmation, class: "label") %>
	    			<%= f.password_field(:password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Password confirmation") %>
					
				</div>
				<% resource.errors[:password].each do |error| %>
					<div class="error">
						<%= error %>
					</div>
				<% end %>
				<% resource.errors[:password_confirmation].each do |error| %>
    				<div class="error">
						<%= error %>
					</div>
				<% end %>
			</div>
			<%= f.submit("Submit", class: "btn") %>
	    <% end %>
    	<%= render "devise/shared/links" %>
	</div>
</div>	